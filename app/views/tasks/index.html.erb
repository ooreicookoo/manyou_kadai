  <br>
  <button type="button" class="btn btn-Info">
  <%= link_to t('view.tasks.index.New Task'), new_task_path  %>
  </button>
  <div class="table-responsive">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Title</th>
          <th>Content</th>

          <th><p class="select-drop"><%= link_to "終了期限", tasks_path(sort_expired: "true") %></p></th>
          <th>Status</th>
          <th><p class="select-drop"><%= link_to "優先順位", tasks_path(sort_priority: "true") %></p></th>
          <th>created</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>

        <% @tasks.each do |task| %>
          <tr>
            <td class="task_row"><%= task.title %></td>
            <td class="task_row"><%= task.content %></td>
            <td class="task_row_limit"><%= task.limit.strftime('%Y/%m/%d') %></td>
            <td class="task_row"><%= task.status %></td>
            <td class="task_row_priority"><%= task.priority %></td>
            <td class="task_row"><%= task.created_at.strftime('%Y/%m/%d') %></td>
            <td class="task_row_label"><% task.labels.each do |label| %>
              <%= label.name %>
            <% end %></td>
            <% if logged_in? && task.user.id == current_user.id %>
            <td class="task_row"><%= link_to '詳細', task_path(task.id), class: "btn btn-default" %></td>
            <td class="task_row"><%= link_to '編集', edit_task_path(task.id), class: "btn btn-default" %></td>
            <td class="task_row"><%= link_to '削除', task_path(task.id), method: :delete, data: { confirm: t('view.tasks.index.Are you sure?') } ,class: "btn btn-default" %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>

    <%= paginate @tasks %>
  </div>

</div>
